<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.zhhr.ui.activity.MainActivity">
    <com.android.zhhr.ui.custom.ZElasticRefreshScrollView
        android:id="@+id/sv_comic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBg"
            >
            <RelativeLayout
                android:layout_marginTop="160dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_loading"
                    android:background="@color/colorBg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/iv_loading_top"
                            android:layout_margin="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/loading_top"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:id="@+id/tv_loading"
                            android:text="努力加载中..."
                            android:gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ly_meun"
                    android:layout_below="@id/rl_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/ll_category1"
                            android:background="@color/colorBg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@mipmap/fenlei1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:textSize="10dp"
                                android:text="男生榜"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_category2"
                            android:background="@color/colorBg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@mipmap/fenlei3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:textSize="10dp"
                                android:text="女生榜"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_category3"
                            android:background="@color/colorBg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@mipmap/fenlei2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:textSize="10dp"
                                android:text="国漫"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_category4"
                            android:background="@color/colorBg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@mipmap/fenlei4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:textSize="10dp"
                                android:text="日漫"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_category5"
                            android:background="@color/colorBg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:src="@mipmap/fenlei5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:textSize="10dp"
                                android:text="分类"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_below="@id/ly_meun"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycle_view">
                </android.support.v7.widget.RecyclerView>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/recycle_view"
                    android:src="@mipmap/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_error_view"
                    android:background="@color/colorBgDark"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    >
                    <ImageView
                        android:id="@+id/iv_error_bg"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/error_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_error"
                        android:layout_below="@id/iv_error_bg"
                        android:src="@mipmap/btn_reload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </RelativeLayout>
            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/B_banner"
                app:delay_time="4000"
                app:indicator_drawable_selected="@drawable/indicator_select"
                app:indicator_drawable_unselected="@drawable/indicator_unselect"
                app:indicator_margin="5dp"
                app:indicator_height="8dp"
                app:indicator_width="8dp"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </RelativeLayout>
    </com.android.zhhr.ui.custom.ZElasticRefreshScrollView>


</RelativeLayout>
